{
  "apps": [
    {
      "name": "app",
      "script": "tools/runFrontend.ts",
      "exec_interpreter": "ts-node",
      "watch": ["app/**/*.*"],
      "watch_options": {
        "awaitWriteFinish": true
      },
      "restart_delay": "2000",
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "db",
      "script": "mongod --dbpath './db' --port 4696"
    }
  ]
}