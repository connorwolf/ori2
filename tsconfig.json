{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es6"
        ],
        "outDir": "dist",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true
    },
    "include": [
        "app/**/*"
    ]
}